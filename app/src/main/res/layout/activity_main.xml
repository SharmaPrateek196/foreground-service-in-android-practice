<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/startForegroundStartedService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_music_started"
            app:layout_constraintBottom_toTopOf="@id/endForegroundStartedService"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <Button
            android:id="@+id/endForegroundStartedService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stop_music_started"
            app:layout_constraintBottom_toTopOf="@id/space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/startForegroundStartedService" />
        
        <Space
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_height"
            app:layout_constraintTop_toBottomOf="@id/endForegroundStartedService"
            app:layout_constraintBottom_toTopOf="@id/startBoundService"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>

        <Button
            android:id="@+id/startBoundService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_music_bound"
            app:layout_constraintBottom_toTopOf="@id/endBoundService"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/space" />

        <Button
            android:id="@+id/endBoundService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stop_music_bound"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/startBoundService" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>